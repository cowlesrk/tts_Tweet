<p id="notice"><%= notice %></p>

<h1>No Twerks Given</h1>

<table>
	<thead>
		<tr>
			<th>Message</th>
			<th>User</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @twerks.each do |twerk| %>
		<tr>
			<td><%= twerk.message %></td>
			<td><%= twerk.user.username %></td>
			<td><%= link_to 'Show', twerk %></td>
			<td><%= link_to 'Edit', edit_twerk_path(twerk) %></td>
			<td><%= link_to 'Destroy', twerk, method: :delete, data: {confirm: 'Are you sure?'} %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

